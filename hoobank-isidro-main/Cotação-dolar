  <section id="cotacao-dolar">
    <h2>üíµ Cota√ß√£o do D√≥lar</h2>
    <p id="valor">Carregando...</p>
    <p id="data"></p>
  </section>

  <script>
    async function buscarCotacaoDolar() {
      try {
        const resposta = await fetch('https://api.frankfurter.app/latest?from=USD&to=BRL');
        const dados = await resposta.json();

        const valorDolar = dados.rates.BRL.toFixed(2).replace('.', ',');
        const data = new Date(dados.date).toLocaleDateString('pt-BR');

        document.getElementById('valor').textContent = `1 USD = R$ ${valorDolar}`;
        document.getElementById('data').textContent = `Data: ${data}`;
      } catch (erro) {
        document.getElementById('valor').textContent = 'Erro ao carregar a cota√ß√£o';
        console.error('Erro na API da cota√ß√£o:', erro);
      }
    }

    buscarCotacaoDolar();
  </script>

